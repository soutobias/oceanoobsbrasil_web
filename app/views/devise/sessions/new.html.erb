<div class="container">

  <div class='container pt-5'>
    <h3 class="text-center bg-login p-2 font-weight-bold">
    Bem-vindo</h3>

    <div class= 'container border-login '>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :username, label: "Usuário",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "Usuário" } %>
          <%= f.input :password, label: "Senha",
                      required: false,
                      input_html: { autocomplete: "Senha" } %>
        </div>

        <div class="form-actions pb-2">
          <%= f.button :submit, "Entre", class: "btn btn-yellow font-weight-bold"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
