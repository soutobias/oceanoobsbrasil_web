<div class="container">

  <div class='container pt-5'>
    <h3 class="text-center bg-primary text-white p-2 font-weight-bold">
    Bem-vindo</h3>

    <div class= 'container border border-primary'>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :username, label: "Usuário",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "Usuário" } %>
          <%= f.input :password, label: "Senha",
                      required: false,
                      input_html: { autocomplete: "Senha" } %>
        </div>

        <div class="form-actions pb-2">
          <%= f.button :submit, "Entre", class: "btn btn-primary font-weight-bold"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
